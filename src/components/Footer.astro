<style>
	footer {
		padding: 2em 0;
		background: rgb(var(--background-secondary));
		color: rgb(var(--gray));
		text-align: center;
		border-top: 1px solid rgba(var(--gray-light), 0.3);
		font-size: 0.85rem;
	}
	.footer-content {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1rem;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}
	.social-links {
		display: flex;
		gap: 1em;
	}
	.social-links a {
		color: rgb(var(--gray));
		transition: color 0.2s ease;
	}
	.social-links a:hover {
		color: var(--accent);
	}
	@media (max-width: 600px) {
		.footer-content {
			flex-direction: column;
			gap: 1rem;
		}
	}
</style>